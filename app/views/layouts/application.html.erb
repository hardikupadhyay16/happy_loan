<!DOCTYPE html>
<html>
  <head>
    <title>HappyLoan</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <%= nav_bar fixed: :top, brand: 'Happy Loan HR', responsive: true do %>
    <%= menu_group do %>
      <%= menu_item 'Home', root_path %>
      <%= menu_divider %>
      <% if current_user.present?%>
        <%= menu_item 'Employee Requisition', emp_requisitions_path %>
        <%= menu_item 'Position Approval', position_approvals_path %>
      <%end%>
      <%#= menu_item 'About Us', '#' %>
      <%#= menu_item 'Contact', '#' %>

    <% end %>
    <%= menu_group pull: :right do %>
      <% if current_user %>
        <%= menu_item 'Logout', destroy_user_session_path, method: :delete%>
      <% end %>
    <% end %>
  <% end %>
    <p class="notice"><%= notice %></p>
    <p class="alert"><%= alert %></p>
    <%= yield %>
  </body>
</html>
