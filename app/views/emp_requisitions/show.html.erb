<%- model_class = EmpRequisition -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @emp_requisition.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:job_hours) %>:</strong></dt>
  <dd><%= @emp_requisition.job_hours %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_date) %>:</strong></dt>
  <dd><%= @emp_requisition.start_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:position) %>:</strong></dt>
  <dd><%= @emp_requisition.position %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @emp_requisition.user.first_name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              emp_requisitions_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_emp_requisition_path(@emp_requisition), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              emp_requisition_path(@emp_requisition),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
