<%= form_for @emp_requisition, :html => { :class => "form-horizontal emp_requisition" } do |f| %>

  <% if @emp_requisition.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@emp_requisition.errors.count, "error") %> prohibited this emp_requisition from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @emp_requisition.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <div class="col-md-6">
    <div class="form-group">
      <%= f.label :title, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :title, :class => 'form-control' %>
      </div>
      <%=f.error_span(:title) %>
    </div>
    <div class="form-group">
      <%= f.label :job_hours, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :job_hours, :class => 'form-control' %>
      </div>
      <%=f.error_span(:job_hours) %>
    </div>
    <div class="form-group">
      <%= f.label :start_date, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.date_field :start_date, :class => 'form-control' %>
      </div>
      <%=f.error_span(:start_date) %>
    </div>
    <div class="form-group">
      <%= f.label :position, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.select :position, ['New Position', 'Replacement', 'Reorganization', 'Internal Candidates',
                                 'External Candidates', 'Internal and External Candidates'], {}, {class: 'form-control'} %>
      </div>
      <%=f.error_span(:position) %>
    </div>
    <%= f.hidden_field :user_id, value: current_user.id %>

  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t('helpers.links.cancel')),
                emp_requisitions_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
