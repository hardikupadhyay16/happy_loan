<%- model_class = PositionApproval -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:annual_compensation) %></th>
      <th><%= model_class.human_attribute_name(:phone) %></th>
      <th><%= model_class.human_attribute_name(:email) %></th>
      <th><%= model_class.human_attribute_name(:approved) %></th>
      <th><%= model_class.human_attribute_name(:comment) %></th>
      <th><%= model_class.human_attribute_name(:emp_requisition_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @position_approvals.each do |position_approval| %>
      <tr>
        <td><%= link_to position_approval.id, position_approval_path(position_approval) %></td>
        <td><%= position_approval.annual_compensation %></td>
        <td><%= position_approval.phone %></td>
        <td><%= position_approval.email %></td>
        <td><%= position_approval.approved %></td>
        <td><%= position_approval.comment %></td>
        <td><%= position_approval.emp_requisition_id %></td>
        <td><%=l position_approval.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_position_approval_path(position_approval), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      position_approval_path(position_approval),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_position_approval_path,
            :class => 'btn btn-primary' %>
