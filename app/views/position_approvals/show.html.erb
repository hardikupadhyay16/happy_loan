<%- model_class = PositionApproval -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:annual_compensation) %>:</strong></dt>
  <dd><%= @position_approval.annual_compensation %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @position_approval.phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:email) %>:</strong></dt>
  <dd><%= @position_approval.email %></dd>
  <dt><strong><%= model_class.human_attribute_name(:approved) %>:</strong></dt>
  <dd><%= @position_approval.approved %></dd>
  <dt><strong><%= model_class.human_attribute_name(:comment) %>:</strong></dt>
  <dd><%= @position_approval.comment %></dd>
  <dt><strong><%= model_class.human_attribute_name(:emp_requisition_id) %>:</strong></dt>
  <dd><%= @position_approval.emp_requisition_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              position_approvals_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_position_approval_path(@position_approval), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              position_approval_path(@position_approval),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
